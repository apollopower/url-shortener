<p id="notice"><%= notice %></p>
<div class="header">
  <h1>Magic URL Shortener</h1>

  <h3>Enter a REALLY long URL, and get a short one in return!</h3>
</div>
<div class="url_form">
  <%= render 'form', link: @link %>
</div>

<div class="links">
  <h2> Requested Links</h2>

  <table>
    <thead>
      <tr>
        <th>Original url</th>
        <th>Short url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.original_url %></td>
          <td>https://peaceful-eyrie-47753.herokuapp.com/<%= link.short_url %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
